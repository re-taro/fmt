{
  "name": "@re-taro/fmt",
  "description": "My personal formatter config monorepo.",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.9.2",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Rintaro Itokawa",
    "email": "me@re-taro.dev",
    "url": "https://re-taro.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/re-taro/fmt.git"
  },
  "scripts": {
    "build": "pnpm run -r --filter=./packages/* build",
    "lint": "eslint . && prettier . --check",
    "lint:fix": "eslint . --fix && prettier . --write",
    "test": "pnpm run -r --filter=./packages/* test",
    "typecheck": "tsc --noEmit",
    "watch": "pnpm run -r --filter=./packages/* watch"
  },
  "devDependencies": {
    "@re-taro/eslint-config": "workspace:*",
    "@re-taro/prettier-config": "workspace:*",
    "@rollup/plugin-replace": "5.0.4",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.5",
    "@types/node": "20.8.8",
    "eslint": "8.52.0",
    "prettier": "3.0.0",
    "rollup": "4.1.4",
    "terser": "5.22.0",
    "typescript": "5.1.6",
    "vitest": "0.34.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "svelte",
        "eslint-plugin-import",
        "eslint",
        "prettier"
      ]
    }
  }
}
